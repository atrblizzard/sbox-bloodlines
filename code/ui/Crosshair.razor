@using Sandbox;
@using System;
@using Sandbox.UI;

@namespace Bloodlines.UI
@inherits Panel;

<style>
    Crosshair {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translateX(-50%) translateY(-50%);
        transition: opacity 0.1s ease;
        opacity: 1;
    }
</style>

<root>
    <img class="icon" src="@ImagePath" />
</root>

@code {
    public string ImagePath => "ui/hud/crosshairs/unarmed.png";

    protected override int BuildHash()
    {
        return HashCode.Combine( ImagePath );
    }
}